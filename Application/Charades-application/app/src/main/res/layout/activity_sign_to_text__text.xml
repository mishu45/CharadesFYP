<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"

    tools:context=".Views.SignToText.SignToText_Text">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8sp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/charades"
            android:textSize="48sp"/>

        <ImageView
            android:layout_width="70sp"
            android:layout_height="60sp"
            android:layout_toEndOf="@+id/titleText"
            android:contentDescription="@string/todo"
            android:src="@mipmap/asl_hands_colorful"
            app:srcCompat="@mipmap/asl_hands_colorful" />

    </RelativeLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="270sp"
        android:layout_marginTop="150sp"
        android:text="TextView" />

    <Button
        android:id="@+id/translateAnotherBtn"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:text="Translate Another"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorBlue"
        android:textColor="#FFFF"  />

    <Button
        android:id="@+id/backToDashboardBtn"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Back to Dashboard"
        android:layout_below="@+id/translateAnotherBtn"
        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorBlue"
        android:textColor="#FFFF"  />

</RelativeLayout>